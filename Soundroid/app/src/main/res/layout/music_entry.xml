<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="118dp">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/item_wrapper"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:scrollbars="horizontal">

        <ImageView
            android:id="@+id/album_art_list_entry"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:maxHeight="64dp"
            android:minHeight="64dp"
            android:maxWidth="64dp"
            android:minWidth="64dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="@string/default_image"
            app:srcCompat="@mipmap/ic_launcher"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="82dp"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/name_view_list_entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_name"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/artist_view_list_entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_artist" />

            <TextView
                android:id="@+id/album_view_list_entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_album" />
        </LinearLayout>
        <TextView
            android:id="@+id/textViewOptions"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="&#8942;"
            android:textAppearance="?android:textAppearanceLarge" />
    </LinearLayout>
</ScrollView>